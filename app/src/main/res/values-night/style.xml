<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark Theme -->
    <style name="Theme.ElectroFix.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#607D8B</item>
        <item name="colorSecondaryVariant">#455A64</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/nav_bar_dark_color</item>

        <!-- Rounded Button Style Apply -->
        <item name="materialButtonStyle">@style/RoundedButtonStyle</item>
    </style>

    <!-- Rounded Button Style -->
    <style name="RoundedButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">50dp</item> <!-- কোণ গোল -->
        <item name="android:textStyle">bold</item> <!-- টেক্সট স্টাইল -->
        <item name="android:padding">12dp</item> <!-- প্যাডিং -->
    </style>
</resources>