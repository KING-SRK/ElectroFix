<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- ভিতরের রঙ -->
    <solid android:color="#E0E4E7" />

    <!-- কোণাগুলো গোল -->
    <corners android:radius="8dp" />

    <!-- ভেতরের প্যাডিং -->
    <padding
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp" />

    <!-- পাতলা বর্ডার -->
    <stroke
        android:width="1dp"
        android:color="#A9A7A7"/>
</shape>



