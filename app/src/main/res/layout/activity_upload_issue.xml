<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/backgroundColor">

    <!-- Report Issue Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/arrow_icon"
            android:scaleType="fitCenter"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Issue"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- Description of Issue -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Describe your issue:"
        android:textSize="16sp"
        android:textColor="@color/textColor"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edtIssueDescription"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Write your issue here..."
        android:gravity="top|start"
        android:textColor="@color/textColor"
        android:background="@drawable/details_card_bg"
        android:padding="15dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"/>

    <!-- Suggestion for Improvement -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your suggestion for improvement (Optional):"
        android:textSize="16sp"
        android:textColor="@color/textColor"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edtSuggestion"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Write your suggestion here..."
        android:gravity="top|start"
        android:textColor="@color/textColor"
        android:background="@drawable/details_card_bg"
        android:padding="15dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"/>

    <!-- Upload Screenshot Button -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload a screenshot (Optional):"
        android:textSize="16sp"
        android:textColor="@color/textColor"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnUploadScreenshot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Screenshot"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="10dp"/>

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@color/white"
        android:backgroundTint="@color/green"
        android:layout_marginTop="20dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>