<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <!-- Overlay (must come after layout content, NOT duplicated) -->
    <FrameLayout
        android:id="@+id/dummyDim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:elevation="4dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AAFFFFFF" />
    </FrameLayout>

    <!-- Header -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/arrow_icon"
        android:contentDescription="Back"
        android:scaleType="fitCenter"
        app:tint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:elevation="10dp"/>

    <TextView
        android:id="@+id/PaymentPage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PAYMENT MODE"
        android:textColor="@color/skyblue"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.04"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toStartOf="@id/btnQRScanner"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"/>

    <ImageButton
        android:id="@+id/btnQRScanner"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:src="@drawable/qr_scanner"
        android:contentDescription="QR Scanner"
        android:scaleType="fitCenter"
        app:tint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        android:layout_marginEnd="16dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBelowHeader"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="72dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <!-- Center Amount Input -->
    <ScrollView
        android:id="@+id/scrollCentre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/guidelineBelowHeader"
        app:layout_constraintBottom_toTopOf="@id/quickRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="12dp">

            <!-- Amount Input -->
            <EditText
                android:id="@+id/editTextAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="â‚¹0"
                android:inputType="number"
                android:maxLength="6"
                android:textSize="36sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:background="@null"
                android:textColor="#000"
                android:textColorHint="#9E9E9E"
                android:padding="8dp"/>

            <!-- Note Input Field + Clear -->
            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_classy_editbox">
                <EditText
                    android:id="@+id/btnAddNote"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="top|start"
                    android:hint="Add Note"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="4"
                    android:paddingStart="16dp"
                    android:paddingEnd="48dp"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:textSize="18sp"
                    android:imeOptions="actionDone" />


                <ImageButton
                    android:id="@+id/btnClear"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Clear"
                    android:scaleType="centerInside"
                    android:src="@drawable/crosssign_button" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Quick Amount Horizontal Buttons -->
    <HorizontalScrollView
        android:id="@+id/quickRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/upiPaymentButton">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/hundredrsBalence"
                style="@style/RoundedBlueButton"
                android:text="+100"/>
            <Button
                android:id="@+id/twohundred"
                style="@style/RoundedBlueButton"
                android:layout_marginStart="8dp"
                android:text="+200"/>
            <Button
                android:id="@+id/fivehundred"
                style="@style/RoundedBlueButton"
                android:layout_marginStart="8dp"
                android:text="+500"/>
            <Button
                android:id="@+id/oneThousand"
                style="@style/RoundedBlueButton"
                android:layout_marginStart="8dp"
                android:text="+1000"/>
            <Button
                android:id="@+id/twoThousand"
                style="@style/RoundedBlueButton"
                android:layout_marginStart="8dp"
                android:text="+2000"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Proceed Button -->
    <Button
        android:id="@+id/upiPaymentButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#02AD09"
        android:text="PROCEED TO PAY"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:paddingVertical="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/locationFrame"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"/>

    <!-- Location Access -->
    <FrameLayout
        android:id="@+id/locationFrame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="24dp"
        android:elevation="10dp">

        <Button
            android:id="@+id/LocationAccessbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0FC4D9"
            android:text="TURN ON LOCATION"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:paddingVertical="14dp"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>