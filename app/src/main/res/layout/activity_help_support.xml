<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button & Header Layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="0dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/arrow_icon"
                android:scaleType="fitCenter"
                android:contentDescription="Back" />

            <!-- Header Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help &amp; Support"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <!-- Contact Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Support"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:paddingTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="5dp">

            <Button
                android:id="@+id/btnCallSupport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“ž Call"
                android:textColor="@color/white"
                android:backgroundTint="@color/green" />

            <Button
                android:id="@+id/btnEmailSupport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âœ‰ Email"
                android:backgroundTint="@color/yellow"
                android:textColor="@color/white"
                android:layout_marginStart="10dp" />

            <Button
                android:id="@+id/btnChatSupport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ’¬ Chat"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:layout_marginStart="10dp" />
        </LinearLayout>

        <!-- FAQ Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequently Asked Questions (FAQ)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:paddingTop="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/details_card_bg"
            android:elevation="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ How to book the service?"
                android:textSize="16sp"
                android:textColor="@color/textColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ What are the payment methods?"
                android:textSize="16sp"
                android:textColor="@color/textColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ How to file a complaint?"
                android:textSize="16sp"
                android:textColor="@color/textColor" />
        </LinearLayout>

        <!-- New Help Articles Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help Articles"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:paddingTop="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/details_card_bg"
            android:elevation="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ How to use the app?"
                android:textSize="16sp"
                android:textColor="@color/textColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Troubleshooting common issues"
                android:textSize="16sp"
                android:textColor="@color/textColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ How to get the best service?"
                android:textSize="16sp"
                android:textColor="@color/textColor" />
        </LinearLayout>

        <!-- Report an Issue -->
        <Button
            android:id="@+id/btnReportIssue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš  Report an Issue"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:layout_marginTop="15dp" />

        <!-- Terms & Privacy -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnPrivacyPolicy"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="ðŸ”’ Privacy Policy"
                android:backgroundTint="@color/skyblue"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp" />

            <Button
                android:id="@+id/btnTermsOfService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‘ Terms &amp; Conditions"
                android:backgroundTint="@color/skyblue"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>