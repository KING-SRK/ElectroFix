<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/arrow_icon"
        android:contentDescription="Back"
        app:tint="@null"
        android:scaleType="fitCenter"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Page Title -->
    <TextView
        android:id="@+id/PaymentPage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PAYMENT CONFORM"
        android:textColor="#02AD09"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.04"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Profile Card -->
    <LinearLayout
        android:id="@+id/profileCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/classy_card_bg"
        android:elevation="6dp"
        android:gravity="center_horizontal"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="ElectroFix Icon"
            android:scaleType="centerInside"
            android:src="@drawable/payingtoelectrofix" />

        <TextView
            android:id="@+id/PayingTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paying To"
            android:textColor="#02AD09"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:layout_marginTop="16dp"
            android:contentDescription="ElectroFix Text"
            android:scaleType="centerInside"
            android:src="@drawable/electrofix_text" />
    </LinearLayout>

    <!-- Amount Text -->
    <TextView
        android:id="@+id/autoAmountBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="12dp"
        android:gravity="center"
        android:text="Pay â‚¹0.00"
        android:textColor="#03C80B"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/profileCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Horizontal Button Group -->
    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/autoAmountBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:weightSum="1">

        <Button
            android:id="@+id/upiPaymentButton"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="0.55"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#02AD09"
            android:text="Proceed to Pay"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="0.45"
            android:layout_marginStart="8dp"
            android:backgroundTint="#FB1202"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
