<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/avatar1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar1"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/avatar2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar2"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/avatar3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar3"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />
        <ImageView
            android:id="@+id/avatar4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar4"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />


    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp">


        <ImageView
            android:id="@+id/avatar5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar5"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/avatar6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar6"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/avatar7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar7"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/avatar8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar8"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>
</LinearLayout>
