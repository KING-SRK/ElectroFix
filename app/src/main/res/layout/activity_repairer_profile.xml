<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/electroFixText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.05"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="6"
        android:text="Repairer"
        android:textColor="@color/yellow"
        android:textSize="40sp"
        android:textStyle="bold" />


        <!-- প্রধান কন্টেন্ট এলাকা (LinearLayout) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:orientation="vertical"
            android:layout_marginTop="85dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/details_card_bg"
            android:elevation="10dp"
            android:gravity="center"
            android:paddingBottom="80dp">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/repairerProfileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/repairer_profile_icon" />

            <!-- Phone -->
            <TextView
                android:id="@+id/repairerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Hi, Name"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <!-- Edit Profile Button -->

            <!-- View Ratings Button -->

            <Button
                android:id="@+id/btnProfileInfo"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/skyblue"
                android:padding="12dp"
                android:text="Profile Info"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <!-- View Work History Button -->
            <Button
                android:id="@+id/btnViewRatings"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:backgroundTint="@color/skyblue"
                android:padding="12dp"
                android:text="Set Budget"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <!-- View Booking List Button -->
            <Button
                android:id="@+id/btnViewBookings"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:backgroundTint="@color/skyblue"
                android:padding="12dp"
                android:text="View Booking List"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <!-- Logout Button -->
            <Button
                android:id="@+id/btnViewWorkHistory"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:backgroundTint="@color/skyblue"
                android:padding="12dp"
                android:text="View Work History"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/red"
                android:padding="12dp"
                android:text="Logout"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>




    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/navigation_bar"
        android:weightSum="4"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <!-- Profile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/repairer_profile_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:contentDescription="Repairer Profile"
                android:scaleType="fitCenter"
                android:src="@drawable/repairer_profile_icon" />

            <TextView
                android:id="@+id/repairer_profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Profile"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/home_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:contentDescription="Home"
                android:scaleType="fitCenter"
                android:src="@drawable/home_icon" />

            <TextView
                android:id="@+id/home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Home"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Categories -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/category_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:contentDescription="Category"
                android:scaleType="fitCenter"
                android:src="@drawable/category_icon" />

            <TextView
                android:id="@+id/category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Categories"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/settings_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:contentDescription="Settings"
                android:scaleType="fitCenter"
                android:src="@drawable/setting_icon" />

            <TextView
                android:id="@+id/settings_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Settings"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>