<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <!-- ðŸ”¹ Back Button (Top Left) -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/arrow_icon"
        android:scaleType="fitCenter"
        android:contentDescription="Back" />

    <!-- ðŸ“Œ Center Content (No Offers) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!-- ðŸ“Œ "No Offers" Image -->

        <!-- ðŸ“Œ "No Offers" Text -->

        <ImageView
            android:id="@+id/noOffersImage"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/details_card_bg"
            android:contentDescription="No Offers Available"
            android:elevation="10dp"
            android:src="@drawable/no_offers" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="No Offers Available"
            android:textSize="22sp"
            android:background="@drawable/details_card_bg"
            android:elevation="10dp"
            android:textColor="@color/textColor"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>