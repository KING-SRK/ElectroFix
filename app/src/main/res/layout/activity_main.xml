<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    android:padding="0dp">

    <!-- ElectroFix Logo -->
    <ImageView
        android:id="@+id/electrofix_logo"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/electrofix_logo"
        android:contentDescription="ElectroFix Logo"/>

    <!-- ProgressBar (ডাটা লোডিং দেখানোর জন্য) -->
    <ProgressBar
        android:id="@+id/loading_progress_bar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:indeterminateTint="@color/skyblue"
        style="?android:attr/progressBarStyleLarge" />




    <!-- Search View -->


    <!-- SearchView এবং Notification Button-এর Parent Layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- SearchView -->
        <SearchView
            android:id="@+id/searchView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/search_style"
            android:iconifiedByDefault="false"
            android:queryHint="Search here..." />

        <!-- Notification Button -->
        <ImageButton
            android:id="@+id/notificationButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:contentDescription="Notifications"
            android:scaleType="fitCenter"
            android:src="@drawable/notification_bell" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/details_card_bg"
        android:layout_marginTop="20dp"
        android:elevation="10dp">

        <!-- Category Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPTIONS"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2FD5E9"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="0dp">

        <!-- Payment Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnTracking"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="7dp"
                android:background="@null"
                android:contentDescription="Payment"
                android:scaleType="fitCenter"
                android:src="@drawable/option_traking" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tracking"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2FD5E9"
                android:gravity="center"/>

        </LinearLayout>

        <!-- Tracking Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnPayment"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="7dp"
                android:background="@null"
                android:contentDescription="Tracking"
                android:scaleType="fitCenter"
                android:src="@drawable/option_pament" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2FD5E9"
                android:gravity="center"/>

        </LinearLayout>

        <!-- Offer Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnBilling"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/billing_history"
                android:scaleType="fitCenter"
                android:layout_margin="7dp"
                android:background="@null"
                android:contentDescription="Offers"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Bill Hist"
                android:textColor="#2FD5E9"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Help & Support Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnOffer"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/option_offer"
                android:scaleType="fitCenter"
                android:layout_margin="7dp"
                android:background="@null"
                android:contentDescription="Help and Support"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offers"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2FD5E9"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

