<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:background="@color/home_backgroundColor">

    <ScrollView
        android:id="@+id/home_scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp"
            android:clipChildren="false"
            android:paddingTop="180dp"
            android:background="@color/home_backgroundColor">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/image_slider_viewpager"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:clipToPadding="true"
                android:clipChildren="true"
                android:overScrollMode="never"/>


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout_indicator"
                android:layout_width="120dp"
                android:layout_height="6dp"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_slider_viewpager"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"
                app:tabPaddingBottom="2dp"
                app:tabPaddingEnd="6dp"
                app:tabPaddingStart="6dp"
                app:tabPaddingTop="2dp"
                app:tabRippleColor="@android:color/transparent" />


            <LinearLayout
                android:id="@+id/options_card"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/home_icon_bgcard"
                android:elevation="10dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/tab_layout_indicator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="OPTIONS"
                    android:textColor="@color/option_card_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btnTracking"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="7dp"
                            android:background="@null"
                            android:contentDescription="Tracking"
                            android:scaleType="fitCenter"
                            android:src="@drawable/option_traking" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Track"
                            android:textColor="@color/option_card_text"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btnPayment"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="7dp"
                            android:background="@null"
                            android:contentDescription="Payment"
                            android:scaleType="fitCenter"
                            android:src="@drawable/option_pament" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Pay"
                            android:textColor="@color/option_card_text"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btnNotification"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="7dp"
                            android:background="@null"
                            android:contentDescription="Upload Issue"
                            android:scaleType="fitCenter"
                            android:src="@drawable/notification_bell" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Bell"
                            android:textColor="@color/option_card_text"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btnHelpSupport"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="7dp"
                            android:background="@null"
                            android:contentDescription="Help and Support"
                            android:scaleType="fitCenter"
                            android:src="@drawable/option_help_support" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Help"
                            android:textColor="@color/option_card_text"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:id="@+id/referralImageButton"
                android:layout_width="448dp"
                android:layout_height="195dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="26dp"
                android:background="@null"
                android:contentDescription="Referral"
                android:scaleType="fitCenter"
                android:src="@drawable/refarel_image"
                app:layout_constraintDimensionRatio="H,16:9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/options_card" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/fixed_header"
        android:layout_width="0dp"
        android:layout_height="202dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="8dp"
        android:background="@color/home_backgroundColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/electrofix_logo"
            android:layout_width="200dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:contentDescription="ElectroFix Logo"
            android:scaleType="fitCenter"
            android:src="@drawable/electrofix_text" />

        <ProgressBar
            android:id="@+id/loading_progress_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="@color/skyblue"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:id="@+id/search_notif_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

            <SearchView
                android:id="@+id/searchView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/searchbar_style"
                android:iconifiedByDefault="false"
                android:queryHint="Search here..." />

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clipToPadding="false" >
            <LinearLayout
            android:id="@+id/Category_notif_row"
            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnAC"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:background="@drawable/home_mini_rounded_card"
                android:src="@drawable/product_ac"
                android:scaleType="fitCenter"
                android:contentDescription="AC" />


            <ImageButton
                android:id="@+id/btnPC"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/home_mini_rounded_card"
                android:src="@drawable/product_pc"
                android:scaleType="fitCenter"
                android:contentDescription="PC" />

                <ImageButton
                    android:id="@+id/btnphone"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/home_mini_rounded_card"
                    android:contentDescription="Phone"
                    android:scaleType="fitCenter"
                    android:src="@drawable/product_phone" />

                <ImageButton
                    android:id="@+id/btnfan"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/home_mini_rounded_card"
                    android:contentDescription="Fan"
                    android:scaleType="fitCenter"
                    android:src="@drawable/product_fan" />

                <ImageButton
                android:id="@+id/btnwashingmachine"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/home_mini_rounded_card"
                android:src="@drawable/product_washingmachine"
                android:scaleType="fitCenter"
                android:contentDescription="Washing Machine" />

                <ImageButton
                android:id="@+id/btntv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/home_mini_rounded_card"
                android:src="@drawable/product_tv"
                android:scaleType="fitCenter"
                android:contentDescription="TV" />

            <ImageButton
                android:id="@+id/btnxerox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/home_mini_rounded_card"
                android:src="@drawable/product_xerox"
                android:scaleType="fitCenter"
                android:contentDescription="Xerox" />

            <ImageButton
                android:id="@+id/btnfridge"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/home_mini_rounded_card"
                android:src="@drawable/product_fridge"
                android:scaleType="fitCenter"
                android:contentDescription="Fridge" />

        </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/main_navigation_bar"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:paddingVertical="6dp"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout

            android:id="@+id/profile_layout"
            style="@style/BottomNavItem"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/customer_profile_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                style="@style/BottomNavButton"
                android:src="@drawable/ic_profile"
                android:contentDescription="Profile" />

            <TextView
                android:id="@+id/customer_profile_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Profile"
                android:textColor="@color/navigation_text"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/home_layout"
            style="@style/BottomNavItem"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/home_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                style="@style/BottomNavButton"
                android:src="@drawable/home_icon"
                android:contentDescription="Home" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="@color/navigation_text"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/category_layout"
            style="@style/BottomNavItem"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/category_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                style="@style/BottomNavButton"
                android:src="@drawable/category_icon"
                android:contentDescription="Categories" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textSize="12sp"
                android:textColor="@color/navigation_text"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/settings_layout"
            style="@style/BottomNavItem"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/settings_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                style="@style/BottomNavButton"
                android:src="@drawable/setting_icon"
                android:contentDescription="Settings" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Settings"
                android:textColor="@color/navigation_text"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>