<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_customer">

    <!-- প্রধান কন্টেন্ট এলাকা -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="80dp"
        android:gravity="center">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/customerProfileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_image" />

        <!-- Name -->
        <TextView
            android:id="@+id/customerHeaderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerProfileImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Hi, Name"
            android:textColor="@color/yellow"
            android:background="@color/blue"
            android:textStyle="bold"
            android:textSize="16sp" />




        <!-- View Order History Button -->
        <Button
            android:id="@+id/customerBookingHistory"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerEditProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/green"
            android:padding="12dp"
            android:text="View Booking History"
            android:textColor="@color/black"
            android:textStyle="bold"/>


        <!-- View Ratings Button -->
        <Button
            android:id="@+id/customerEditProfile"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerHeaderName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/skyblue"
            android:padding="12dp"
            android:text="Profile Info"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <!-- Logout Button -->
        <Button
            android:id="@+id/customerLogout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerBookingHistory"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/red"
            android:padding="12dp"
            android:text="Logout"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </RelativeLayout>

    <!-- Fixed Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navigation_bar"
        android:gravity="center"
        android:orientation="horizontal" />

    <!-- Circular Home Button (এখন Navigation Bar-এর উপরে ভাসবে) -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"> <!-- এখানে margin বাড়ানো হয়েছে -->

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/navigation_circle_bg"
            android:scaleType="fitCenter"
            android:src="@drawable/home_icon"
            android:padding="15dp"
            android:contentDescription="Home" />
    </RelativeLayout>


</RelativeLayout>