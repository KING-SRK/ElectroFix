<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_backgroundColor">

    <!-- Header -->
    <TextView
        android:id="@+id/electroFixText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Customer"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/yellow"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.05"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="6" />

    <!-- Profile Card -->
    <LinearLayout
        android:id="@+id/profileCard"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/coustomer_rounded_box"
        android:padding="20dp"
        android:elevation="12dp">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/customerProfileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/coustomer_profile"
            android:scaleType="fitCenter"
            android:padding="15dp" />

        <!-- Name -->
        <TextView
            android:id="@+id/customerHeaderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Hi, Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/navigation_text"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8" />

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Profile Info -->
            <LinearLayout
                android:id="@+id/btnProfileInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="0dp"
                    android:src="@drawable/profile_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile Info"
                    android:textColor="@color/navigation_text"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <!-- Booking History -->
            <LinearLayout
                android:id="@+id/btnBookingHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="0dp"
                    android:src="@drawable/coustomer_booking_history_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking History"
                    android:textColor="@color/navigation_text"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <!-- Logout -->
            <LinearLayout
                android:id="@+id/btnLogout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="0dp"
                    android:src="@drawable/coustomer_logout_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textColor="@color/navigation_text"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navigation_bar"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:paddingVertical="6dp"
        android:weightSum="4">



        <!-- Profile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/customer_profile_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:backgroundTint="@color/nav_bar_color"
                android:contentDescription="Customer Profile"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/customer_profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/navigation_text"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/home_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:contentDescription="Home"
                android:scaleType="fitCenter"
                android:src="@drawable/home_icon" />

            <TextView
                android:id="@+id/home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Home"
                android:textColor="@color/navigation_text"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Categories -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/category_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:contentDescription="Category"
                android:scaleType="fitCenter"
                android:src="@drawable/category_icon" />

            <TextView
                android:id="@+id/category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Categories"
                android:textColor="@color/navigation_text"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/settings_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:contentDescription="Settings"
                android:scaleType="fitCenter"
                android:src="@drawable/setting_icon" />

            <TextView
                android:id="@+id/settings_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Settings"
                android:textColor="@color/navigation_text"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>