<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <!-- Header Text -->
    <TextView
        android:id="@+id/electroFixText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.05"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="6"
        android:text="Customer"
        android:textColor="@color/yellow"
        android:textSize="40sp"
        android:textStyle="bold" />

    <!-- Profile Card -->
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/profile_card_bg"
        android:elevation="10dp"
        android:gravity="center"
        android:padding="20dp"
        android:paddingBottom="40dp">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/customerProfileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_profile" />

        <!-- Name -->
        <TextView
            android:id="@+id/customerHeaderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Hi, Name"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:textSize="18sp" />

        <!-- Edit Profile Button -->

        <!-- View Booking History Button -->
        <Button
            android:id="@+id/customerEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/skyblue"
            android:padding="12dp"
            android:text="Profile Info"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <Button
            android:id="@+id/customerBookingHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/skyblue"
            android:padding="12dp"
            android:text="View Booking History"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/customerLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/red"
            android:padding="12dp"
            android:text="Logout"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Home Button -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/navigation_circle_bg"
            android:scaleType="fitCenter"
            android:src="@drawable/home_icon"
            android:padding="10dp"
            android:contentDescription="Home" />
    </RelativeLayout>

</RelativeLayout>