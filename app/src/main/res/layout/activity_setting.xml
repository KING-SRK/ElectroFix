<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:padding="0dp">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav"
        android:padding="20dp"
        android:background="@color/backgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:layout_gravity="center"
                android:paddingBottom="5dp"/>

            <!-- Account Settings -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Settings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:paddingTop="10dp"/>

            <Button
                android:id="@+id/btnChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/skyblue"
                android:text="Change Password"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <!-- Notification Settings -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Settings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:paddingTop="15dp"/>

            <Switch
                android:id="@+id/switchPushNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:text="Enable Push Notifications"
                android:thumbTint="@color/switch_thumb"
                android:trackTint="@color/switch_track"/>

            <Switch
                android:id="@+id/switchEmailAlerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:text="Enable Email Alerts"
                android:thumbTint="@color/switch_thumb"
                android:trackTint="@color/switch_track"/>

            <Switch
                android:id="@+id/switchSmsAlerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:text="Enable SMS Alerts"
                android:thumbTint="@color/switch_thumb"
                android:trackTint="@color/switch_track"/>

            <Button
                android:id="@+id/btnChangeLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/skyblue"
                android:textColor="@color/blue"
                android:text="Change Language"/>

            <!-- Security & Privacy -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security &amp; Privacy"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:paddingTop="15dp"/>

            <Switch
                android:id="@+id/switchBiometric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:text="Enable Biometric Login"
                android:thumbTint="@color/switch_thumb"
                android:trackTint="@color/switch_track"/>

            <Switch
                android:id="@+id/switchTwoFactor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:text="Enable Two-Factor Authentication"
                android:thumbTint="@color/switch_thumb"
                android:trackTint="@color/switch_track"/>

            <Button
                android:id="@+id/btnPrivacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/skyblue"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="Privacy Policy"/>

            <Button
                android:id="@+id/btnTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/skyblue"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="Terms &amp; Conditions"
                android:layout_marginTop="5dp"/>

            <!-- App Settings -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Settings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:paddingTop="15dp"/>

            <Button
                android:id="@+id/btnCheckUpdates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/skyblue"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="Check for Updates"/>

            <Button
                android:id="@+id/btnClearCache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/skyblue"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="Clear Cache"/>

            <Button
                android:id="@+id/btnRateApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/skyblue"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="Rate This App"/>

            <Button
                android:id="@+id/btnShareApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/skyblue"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="Share This App"/>

            <!-- Logout -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:backgroundTint="@color/red"
                android:textColor="@android:color/white"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/btnDeleteAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Account"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/red"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/navigation_bar"
        android:weightSum="4"
        android:paddingVertical="6dp">

        <!-- Profile Section (Customer & Repairer) -->
        <LinearLayout
            android:id="@+id/profile_layout"
            style="@style/BottomNavItem"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Customer Profile Button -->
            <ImageButton
                android:id="@+id/customer_profile_button"
                style="@style/BottomNavButton"
                android:src="@drawable/ic_profile"
                android:visibility="gone"
                android:contentDescription="Customer Profile" />

            <!-- Repairer Profile Button -->
            <ImageButton
                android:id="@+id/repairer_profile_button"
                style="@style/BottomNavButton"
                android:src="@drawable/repairer_profile_icon"
                android:visibility="gone"
                android:contentDescription="Repairer Profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center" />
        </LinearLayout>

        <!-- Home Section -->
        <LinearLayout
            android:id="@+id/home_layout"
            style="@style/BottomNavItem"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/home_button"
                style="@style/BottomNavButton"
                android:src="@drawable/home_icon"
                android:contentDescription="Home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center" />
        </LinearLayout>

        <!-- Category Section -->
        <LinearLayout
            android:id="@+id/category_layout"
            style="@style/BottomNavItem"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/category_button"
                style="@style/BottomNavButton"
                android:src="@drawable/category_icon"
                android:contentDescription="Categories" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center" />
        </LinearLayout>

        <!-- Settings Section -->
        <LinearLayout
            android:id="@+id/settings_layout"
            style="@style/BottomNavItem"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/settings_button"
                style="@style/BottomNavButton"
                android:src="@drawable/setting_icon"
                android:contentDescription="Settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>