<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">  <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_icon"
            android:background="?attr/selectableItemBackground"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"/>

        <!-- Header Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:layout_gravity="center"
            android:paddingBottom="5dp"/>

        <!-- Account Settings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:paddingTop="10dp"/>

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:backgroundTint="@color/skyblue"
            android:text="Edit Profile"/>

        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/skyblue"
            android:text="Change Password"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDeleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/red"/>

        <!-- Notification Settings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:paddingTop="15dp"/>

        <Switch
            android:id="@+id/switchPushNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:text="Enable Push Notifications"
            android:thumbTint="@color/switch_thumb"
            android:trackTint="@color/switch_track"/>

        <Switch
            android:id="@+id/switchEmailAlerts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:text="Enable Email Alerts"
            android:thumbTint="@color/switch_thumb"
            android:trackTint="@color/switch_track"/>

        <Switch
            android:id="@+id/switchSmsAlerts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:text="Enable SMS Alerts"
            android:thumbTint="@color/switch_thumb"
            android:trackTint="@color/switch_track"/>

        <!-- App Theme & Layout -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Theme &amp; Layout"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:paddingTop="15dp"/>

        <Switch
            android:id="@+id/switchDarkMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:text="Dark Mode"
            android:thumbTint="@color/switch_thumb"
            android:trackTint="@color/switch_track"/>

        <Button
            android:id="@+id/btnChangeLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/skyblue"
            android:textColor="@color/blue"
            android:text="Change Language"/>

        <!-- Security & Privacy -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security &amp; Privacy"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:paddingTop="15dp"/>

        <Switch
            android:id="@+id/switchBiometric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:text="Enable Biometric Login"
            android:thumbTint="@color/switch_thumb"
            android:trackTint="@color/switch_track"/>

        <Switch
            android:id="@+id/switchTwoFactor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:text="Enable Two-Factor Authentication"
            android:thumbTint="@color/switch_thumb"
            android:trackTint="@color/switch_track"/>

        <Button
            android:id="@+id/btnPrivacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/skyblue"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:text="Privacy Policy"/>

        <Button
            android:id="@+id/btnTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/skyblue"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:text="Terms &amp; Conditions"
            android:layout_marginTop="5dp"/>

        <!-- App Settings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:paddingTop="15dp"/>

        <Button
            android:id="@+id/btnCheckUpdates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/skyblue"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:text="Check for Updates"/>

        <Button
            android:id="@+id/btnClearCache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/skyblue"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:text="Clear Cache"/>

        <Button
            android:id="@+id/btnRateApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/skyblue"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:text="Rate This App"/>

        <Button
            android:id="@+id/btnShareApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/skyblue"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:text="Share This App"/>

        <!-- Logout -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            android:layout_marginTop="15dp"/>
    </LinearLayout>
</ScrollView>