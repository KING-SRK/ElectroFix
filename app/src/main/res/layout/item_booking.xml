<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="10dp"
    card_view:cardBackgroundColor="@color/cardbackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Name -->
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joy Thayal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/textColor" />

        <!-- Service Name -->
        <TextView
            android:id="@+id/tv_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Software Installation"
            android:textSize="16sp"
            android:textColor="@color/textColor"
            android:layout_marginTop="2dp" />

        <!-- Price -->
        <TextView
            android:id="@+id/tv_service_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: â‚¹20"
            android:textSize="14sp"
            android:textColor="@color/textColor"
            android:layout_marginTop="2dp" />

        <!-- Phone Number -->
        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: 1234567890"
            android:textSize="14sp"
            android:textColor="@color/textColor"
            android:layout_marginTop="4dp" />

        <!-- Address -->
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: MF94+MRQ, Ganga Nagar, Kolkata"
            android:textSize="14sp"
            android:textColor="@color/textColor"
            android:layout_marginTop="4dp" />

        <!-- Preferred Time -->
        <TextView
            android:id="@+id/tv_preferred_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferred Time: 08 Apr 2025, 04:01 AM"
            android:textSize="14sp"
            android:textColor="@color/textColor"
            android:layout_marginTop="4dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textSize="14sp"
            android:textColor="#FF9800"
            android:textStyle="italic"
            android:layout_marginTop="6dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btn_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:textAllCaps="false"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:textAllCaps="false"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/btn_track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track"
                android:textAllCaps="false"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>